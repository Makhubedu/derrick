{
	"parser": "@typescript-eslint/parser",
	"parserOptions": {
		"ecmaVersion": 12,
		"sourceType": "module",
		"requireConfigFile": false,
		"experimentalDecorators": true
	},
	"ignorePatterns": [
		"node_modules/**/*"
	],
	"extends": [
    "next/core-web-vitals",
		"eslint:recommended"
	],
	"env": {
		"browser": true,
		"es2022": true,
		"node": true
	},
	"globals": {
		"RequestInit": "readonly"
	},
	"settings": {
		"jsdoc": {
			"mode": "typescript"
		}
	},
  "rules": {
    "quotes": ["error", "single"],
	"semi-spacing": "error",
    "no-restricted-imports": "error",
    "no-duplicate-imports": "error",
	"semi-style": [
		"error",
		"last"
	],
    "indent": ["error", 2],
    "no-multi-spaces": ["error"],
    "sort-imports": [
		"error",
		{
			"ignoreCase": false,
			"ignoreDeclarationSort": false,
			"ignoreMemberSort": false,
			"memberSyntaxSortOrder": [
				"all",
				"multiple",
				"single",
				"none"
			],
			"allowSeparatedGroups": true
		}
	]
  }
}
